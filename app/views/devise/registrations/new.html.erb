<div class="form-group">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="field">
  <%= f.text_field :name, placeholder: "User name", autofocus: true %>
    </div>
    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
    </div>
    <div class="field">
      <%= f.password_field :password, placeholder: "password (6 characters minimum)" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "password confirmation" %>
    </div>
    <div class="field">
      <%= f.text_field :photo, placeholder: "Photo url"%>
    </div>
    <div class="field">
      <%= f.text_area :bio, rows: 5, placeholder:"Your bio..." %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <div class="extras">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>